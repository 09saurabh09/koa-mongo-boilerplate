{
  "name": "koa-mongo-boilerplate",
  "version": "0.1.0",
  "private": false,
  "scripts": {
    "start": "export HOST=0.0.0.0; PORT=6100 node ./bin/www",
    "prod:start": "export NODE_ENV=production; PORT=6100 nodemon ./bin/www",
    "dev:start": "export NODE_ENV=development; PORT=6100 nodemon ./bin/www",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "rm -rf public/* && webpack -p",
    "dev:build": "export NODE_ENV=development; npm run build",
    "prod:build": "export NODE_ENV=production; npm run build",
    "debug": "export NODE_ENV=development; PORT=6100 nodemon --inspect --debug-brk ./bin/www",
    "quickstart": "npm run build; npm start",
    "dev:quickstart": "export NODE_ENV=development; npm run quickstart",
    "prod:quickstart": "export NODE_ENV=production; npm run quickstart",
    "webserver": "export NODE_ENV=development; webpack-dev-server --port 6000 --colors --inline --hot --host 0.0.0.0 --content-base public/",
    "dev": "concurrently 'npm run dev:start' 'npm run webserver'",
    "dev:v": "concurrently 'npm run dev:start' 'npm run webserver:v'",
    "task": "node ./server/tasks/taskRunner",
    "taskDebug": "node --inspect --debug-brk ./server/tasks/taskRunner"
  },
  "dependencies": {
    "bcryptjs": "^2.4.3",
    "bluebird": "^3.7.2",
    "debug": "~4.3.4",
    "dotenv": "^16.0.3",
    "flat": "^5.0.2",
    "glob": "^8.0.3",
    "jade": "~1.11.0",
    "jsonwebtoken": "^8.5.1",
    "koa": "^2.13.4",
    "koa-bodyparser": "^4.3.0",
    "koa-compress": "^5.1.0",
    "koa-convert": "^2.0.0",
    "koa-morgan": "^1.0.1",
    "koa-respond": "^2.1.0",
    "koa-router": "^12.0.0",
    "koa-unless": "^1.0.7",
    "moment": "^2.29.4",
    "mongoose": "^6.6.5",
    "morgan": "~1.10.0",
    "nodemon": "^2.0.20",
    "redis": "^4.3.1",
    "requestretry": "^7.1.0",
    "serve-favicon": "~2.5.0"
  }
}
